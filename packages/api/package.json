{
  "name": "@better-t-ins/api",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "default": "./src/*.ts"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "default": "./src/lib/*.ts"
    }
  },
  "type": "module",
  "scripts": {
    "build": "tsdown"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@better-t-ins/auth": "workspace:*",
    "@better-t-ins/db": "workspace:*",
    "@better-t-ins/storage": "workspace:*",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "archiver": "^7.0.1",
    "dotenv": "catalog:",
    "drizzle-orm": "catalog:",
    "hono": "catalog:",
    "zod": "catalog:"
  }
}
