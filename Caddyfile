{
	auto_https off
}

(app-cert) {
	tls ./.certs/app.better-t-ins.test+6.pem \
 ./.certs/app.better-t-ins.test+6-key.pem
}

app.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:3001 # Vite
}

api.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:3000 # Bun/Hono backend
}

mail.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:8025 # Mailhog Docker
}

storage.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:9001 {
		header_up Host {host}
		header_up X-Forwarded-Host {host}
		header_up X-Forwarded-Proto https
	}
}

s3.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:9000 {
		header_up Host {host}
		header_up X-Forwarded-Host {host}
		header_up X-Forwarded-Proto https
	}
}

drizzle-studio.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:4983
}

react-email.better-t-ins.test {
	import app-cert
	reverse_proxy localhost:3030
}
