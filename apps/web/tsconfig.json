{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["vite/client"],
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tud-box/api/*": ["../../packages/api/src/*"],
      "@tud-box/auth/*": ["../../packages/auth/src/*"],
      "@tud-box/db/*": ["../../packages/db/src/*"]
    }
  }
}
